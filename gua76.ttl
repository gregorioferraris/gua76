@prefix lv2:  <http://lv2plug.in/ns/lv2core#> .
@prefix ui:   <http://lv2plug.in/ns/extensions/ui#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix pset: <http://lv2plug.in/ns/ext/presets#> .
@prefix atom: <http://lv2plug.in/ns/ext/atom#> .
@prefix urid: <http://lv2plug.in/ns/ext/urid#> .
@prefix midi: <http://lv2plug.in/ns/ext/midi#> .
@prefix log:  <http://lv2plug.in/ns/ext/log#> .
@prefix units: <http://lv2plug.in/ns/extensions/units#> .
@prefix doap: <http://usefulinc.com/ns/doap#> .

# Il nostro URI del plugin (deve corrispondere a gua76.cpp e Makefile)
<http://moddevices.com/plugins/mod-devel/gua76>
    a lv2:Plugin ;
    lv2:optionalFeature lv2:hardRTCapable ;
    lv2:requiredFeature urid:map ;
    lv2:requiredFeature log:trace ;

    doap:name "GUA76 Compressor" ;
    doap:maintainer [
        doap:name "Your Name" ;
        doap:mbox <mailto:your.email@example.com> ;
    ] ;
    doap:homepage <http://yourwebsite.com> ;
    doap:license <http://opensource.org/licenses/MIT> ;

    # --- GUI Definition ---
    ui:ui <http://moddevices.com/plugins/mod-devel/gua76_ui> ;
    .

# Definizione separata per la GUI
<http://moddevices.com/plugins/mod-devel/gua76_ui>
    a ui:X11UI ; # Su Linux
    ui:binary <gua76_ui.so> ;
    lv2:requiredFeature ui:idle ;
    lv2:requiredFeature urid:map ;
    .

# Definizione delle porte
lv2:port [
        a lv2:InputPort , lv2:ControlPort ;
        lv2:index 0 ;
        lv2:symbol "input_gain" ;
        lv2:name "Input Gain" ;
        lv2:default 0.0 ;
        lv2:minimum -20.0 ;
        lv2:maximum 20.0 ;
        units:unit units:db ;
    ] , [
        a lv2:InputPort , lv2:ControlPort ;
        lv2:index 1 ;
        lv2:symbol "output_gain" ;
        lv2:name "Output Gain" ;
        lv2:default 0.0 ;
        lv2:minimum -20.0 ;
        lv2:maximum 20.0 ;
        units:unit units:db ;
    ] , [
        a lv2:InputPort , lv2:ControlPort ;
        lv2:index 2 ;
        lv2:symbol "input_pad_10db" ;
        lv2:name "Input -10dB Pad" ;
        lv2:portProperty lv2:toggled ;
        lv2:default 0.0 ;
        lv2:minimum 0.0 ;
        lv2:maximum 1.0 ;
    ] , [
        a lv2:InputPort , lv2:ControlPort ;
        lv2:index 3 ;
        lv2:symbol "bypass" ;
        lv2:name "Bypass" ;
        lv2:portProperty lv2:toggled ;
        lv2:default 0.0 ;
        lv2:minimum 0.0 ;
        lv2:maximum 1.0 ;
    ] , [
        a lv2:InputPort , lv2:ControlPort ;
        lv2:index 4 ;
        lv2:symbol "normalize_output" ;
        lv2:name "Normalize Output" ;
        lv2:portProperty lv2:toggled ;
        lv2:default 0.0 ;
        lv2:minimum 0.0 ;
        lv2:maximum 1.0 ;
    ] , [
        a lv2:InputPort , lv2:ControlPort ;
        lv2:index 5 ;
        lv2:symbol "ms_mode_active" ;
        lv2:name "M/S Mode" ;
        lv2:portProperty lv2:toggled ;
        lv2:default 0.0 ;
        lv2:minimum 0.0 ;
        lv2:maximum 1.0 ;
    ] , [
        a lv2:InputPort , lv2:ControlPort ;
        lv2:index 6 ;
        lv2:symbol "external_sc_active" ;
        lv2:name "External Sidechain" ;
        lv2:portProperty lv2:toggled ;
        lv2:default 0.0 ;
        lv2:minimum 0.0 ;
        lv2:maximum 1.0 ;
    ] , [
        a lv2:InputPort , lv2:ControlPort ;
        lv2:index 7 ;
        lv2:symbol "attack" ;
        lv2:name "Attack" ;
        lv2:default 0.000020 ; # 20us (più veloce)
        lv2:minimum 0.000020 ;
        lv2:maximum 0.000800 ; # 800us (più lento)
        units:unit units:s ;
        lv2:portProperty lv2:enumeration ; # È a scatti
        lv2:scalePoint [ rdfs:label "20us" ; lv2:value 0.000020 ] ,
                       [ rdfs:label "40us" ; lv2:value 0.000040 ] ,
                       [ rdfs:label "80us" ; lv2:value 0.000080 ] ,
                       [ rdfs:label "160us" ; lv2:value 0.000160 ] ,
                       [ rdfs:label "320us" ; lv2:value 0.000320 ] ,
                       [ rdfs:label "640us" ; lv2:value 0.000640 ] ,
                       [ rdfs:label "800us" ; lv2:value 0.000800 ] ;
    ] , [
        a lv2:InputPort , lv2:ControlPort ;
        lv2:index 8 ;
        lv2:symbol "release" ;
        lv2:name "Release" ;
        lv2:default 0.2 ; # 200ms
        lv2:minimum 0.05 ; # 50ms (più veloce)
        lv2:maximum 1.1 ; # 1100ms (più lento)
        units:unit units:s ;
        lv2:portProperty lv2:enumeration ; # È a scatti
        lv2:scalePoint [ rdfs:label "50ms" ; lv2:value 0.05 ]
